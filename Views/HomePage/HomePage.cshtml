@using Microsoft.AspNetCore.Mvc.Rendering;
@model InfinitySystems.Models.Users
@{
    ViewData["Title"] = "Home";
}

<header style="display: flex; align-items: center; justify-content: space-between; padding: 10px; background-color: #f8f9fa;">
    <button style="transition: transform 0.3s;" onmouseover="this.style.transform='scale(1.1)';" onmouseout="this.style.transform='scale(1)';">Profile</button>
    <img src="~/images/HomePage(1).png" alt="Logo" style="border-radius: 50%; width: 170px; height: 60px;">
    <button style="transition: transform 0.3s;" onmouseover="this.style.transform='scale(1.1)';" onmouseout="this.style.transform='scale(1)';">Log out</button>
</header>

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; padding: 20px;">
        <form method="get" asp-action="Index" asp-controller="Device">
            <input type="image" src="~/images/Devices.png" alt="Devices" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        </form>
        <form method="get" asp-action="Index" asp-controller="Room">
        <input type="image" src="~/images/Rooms.png" alt="Rooms" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        </form>
        <form method="get" asp-action="Index" asp-controller="Event">
        <input type="image" src="~/images/Events.png" alt="Events" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">

        </form>
        <form method="get" asp-action="Index" asp-controller="Task">
        <input type="image" src="~/images/Tasks.png" alt="Tasks" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        </form>
        <form method="get" asp-action="Index" asp-controller="Comms">
        <input type="image" src="~/images/Comms.png" alt="Comms" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        </form>
        <form method="get" asp-action="Index" asp-controller="Finance">
        <input type="image" src="~/images/Finance.png" alt="Finance" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        </form>
    </div>
</body>