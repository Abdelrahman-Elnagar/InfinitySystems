@{
    ViewData["Title"] = "Home";
}

<header style="display: flex; align-items: center; justify-content: space-between; padding: 10px; background-color: #f8f9fa;">
    <button style="transition: transform 0.3s;" onmouseover="this.style.transform='scale(1.1)';" onmouseout="this.style.transform='scale(1)';">Profile</button>
    <img src="~/images/HomePage(1).png" alt="Logo" style="border-radius: 50%; width: 170px; height: 60px;">
    <button style="transition: transform 0.3s;" onmouseover="this.style.transform='scale(1.1)';" onmouseout="this.style.transform='scale(1)';">Log out</button>
</header>

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; padding: 20px;">
        <input type="image" src="~/images/Devices(1).png" alt="Devices" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        <input type="image" src="~/images/Rooms(1).png" alt="Rooms" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        <input type="image" src="~/images/Events(1).png" alt="Events" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        <input type="image" src="~/images/Tasks(1).png" alt="Tasks" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        <input type="image" src="~/images/Comms(1).png" alt="Comms" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
        <input type="image" src="~/images/Finance(1).png" alt="Finance" style="width: 100%; cursor: pointer; transition: transform 0.5s;" onmouseover="this.style.transform='scale(1.05)';" onmouseout="this.style.transform='scale(1)';">
    </div>
</body>